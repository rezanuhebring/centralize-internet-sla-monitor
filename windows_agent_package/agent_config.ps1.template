# agent_config.psd1
# PowerShell Data File for the SLA Monitor Agent configuration.

@{
    # ==============================================================================
    #                      SLA Monitor Agent Configuration
    # ==============================================================================

    # --- Mandatory Settings ---
    AGENT_IDENTIFIER = "<UNIQUE_AGENT_ID>"
    CENTRAL_API_URL = "http://<YOUR_CENTRAL_SERVER_IP>/api/submit_metrics.php"
    
    # --- Optional Settings ---
    AGENT_TYPE = "Client" # Use "Client" for Windows agents to differentiate them.
    CENTRAL_API_KEY = ""

    # --- Test Parameters ---
    PING_HOSTS = @("8.8.8.8", "1.1.1.1", "google.com")
    
    # --- Test Enable/Disable Flags ---
    ENABLE_PING = $true
    ENABLE_DNS = $true
    ENABLE_HTTP = $true
    ENABLE_SPEEDTEST = $true

    # --- Fine-Tuning Parameters ---
    PING_COUNT = 10
    DNS_CHECK_HOST = "www.google.com"
    HTTP_CHECK_URL = "https://www.google.com"
    NETWORK_INTERFACE_TO_MONITOR = "" # e.g., "Ethernet", "Wi-Fi". Leave blank for default.
}